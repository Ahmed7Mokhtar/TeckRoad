@using Microsoft.AspNetCore.Identity;
@using TeckRoad.Entities.DbSets;

@{
    ViewData["Title"] = "Home Page";
}

@inject SignInManager<AppUser> _signUnManager;

@if(_signUnManager.IsSignedIn(User))
{
    <div class="text-center">
        <h1 class="display-4">Welcome To TechRoad</h1>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Not loggged in</h1>
    </div>
}

<div class="modal fade" id="UserLoginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <partial name="_UserLoginPartial">
</div>

<div class="modal fade" id="UserRegistrationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <partial name="_UserRegistrationPartial" />
</div>

@section Scripts {
    <script src="~/js//UserRegistration.js" asp-append-version="true"></script>
    <script src="~/js//UserLogin.js" asp-append-version="true"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}